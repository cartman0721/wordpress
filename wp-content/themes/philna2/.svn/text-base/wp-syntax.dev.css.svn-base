/* reset the table style */
.wp_syntax pre {
	margin-bottom: 0;
}

.wp_syntax table {
	border: none;
	margin: 0;
	padding: 0;
}

.wp_syntax tr:hover {
	background: none;
}

.wp_syntax td {
	border: none;
}

.wp_syntax {
	background: #f8f8f8 url(images/code.gif) no-repeat right top;
	border: 1px dashed #dee9f6;
	font-family: \5fae\8f6f\96c5\9ed1, Helvetica, Times, Arial, serif;
	margin-bottom: 12px;
	overflow: auto;
}

.wp_syntax .line_numbers {
	background: #ddd;
}

.wp_syntax .line_numbers pre {
	background: #fff;
	border: 1px solid #fff;
	color: #888;
	padding: 2px 3px;
	text-align: center;
	-moz-border-radius: 5px;
	-webkit-border-radius: 5px;
}